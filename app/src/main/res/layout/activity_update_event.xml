<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEvent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#192A51"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ActivityTitle"
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:background="@drawable/activity_main_border"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="EVENT EDITOR"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="500dp"
            android:background="@drawable/activity_main_border"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Register_title"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:fontFamily="serif"
                android:hint="Event Title"
                android:inputType="text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/Register_age"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:fontFamily="serif"
                android:hint="Age"
                android:inputType="text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/Register_level"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:fontFamily="serif"
                android:hint="Event Level"
                android:inputType="text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/Register_pace"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:fontFamily="serif"
                android:hint="Event Pace"
                android:inputType="text"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="290dp"
                android:layout_height="75dp"
                android:backgroundTint="#192A51"
                android:fontFamily="serif"
                android:onClick="confirmButtonOnClick"
                android:text="Submit" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="290dp"
                android:layout_height="75dp"
                android:backgroundTint="#192A51"
                android:fontFamily="serif"
                android:onClick="backButtonOnClick"
                android:text="Back" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>