<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEvent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ActivityTitle"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:text="This is the Event Creator" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:onClick="backButtonOnClick"
            android:text="Back" />

        <EditText
            android:id="@+id/Register_title"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:hint="Event Title"
            android:inputType="text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Register_age"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:hint="Age"
            android:inputType="text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Register_level"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:hint="Event Level"
            android:inputType="text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Register_pace"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:hint="Event Pace"
            android:inputType="text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:onClick="confirmButtonOnClick"
            android:text="Confirm New Event" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>