<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rating_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activity_rating_page"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="650dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Club Rating"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="70dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/activity_main_border"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Club:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/rateClubSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <EditText
                android:id="@+id/score_editText"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="Enter Score 1-5"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/decription_editText"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="Enter Description"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="12sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <Button
                android:id="@+id/submit_rating"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#65FFFFFF"
                android:fontFamily="serif"
                android:onClick="submitBtnOnClick"
                android:text="Submit"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/return_btn"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#65FFFFFF"
                android:fontFamily="serif"
                android:onClick="returnBtnOnClick"
                android:text="Return"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>