<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rating_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Club Rating" />

        <Spinner
            android:id="@+id/rateClubSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/score_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Score 1-5"
            android:inputType="text" />

        <EditText
            android:id="@+id/decription_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Description"
            android:inputType="text" />

        <Button
            android:id="@+id/submit_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="submitBtnOnClick"
            android:text="Submit" />

        <Button
            android:id="@+id/return_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="returnBtnOnClick"
            android:text="Return" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>