<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventManager">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/event_manager_page"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="650dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Event Manager"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/btn_newEvent"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#65FFFFFF"
                android:fontFamily="serif"
                android:onClick="newEventButtonOnClick"
                android:text="Create New Event"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_editEvent"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#65FFFFFF"
                android:fontFamily="serif"
                android:onClick="editEventButtonOnClick"
                android:text="Edit Event"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ListView
                android:id="@+id/EventList"
                android:layout_width="345dp"
                android:layout_height="400dp"
                android:background="@drawable/activity_main_border" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Hold on an event to delete"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/btn_Cancel"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#65FFFFFF"
                android:fontFamily="serif"
                android:lineSpacingExtra="16sp"
                android:onClick="backButtonOnClick"
                android:text="Return"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>