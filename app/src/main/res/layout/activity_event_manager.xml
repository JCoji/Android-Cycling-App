<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventManager">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#192A51"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:background="@drawable/activity_main_border"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_newEvent"
                android:layout_width="290dp"
                android:layout_height="65dp"
                android:backgroundTint="#192A51"
                android:fontFamily="serif"
                android:onClick="newEventButtonOnClick"
                android:text="Create New Event" />

            <Button
                android:id="@+id/btn_editEvent"
                android:layout_width="290dp"
                android:layout_height="65dp"
                android:backgroundTint="#192A51"
                android:fontFamily="serif"
                android:onClick="editEventButtonOnClick"
                android:text="Edit Event" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ListView
            android:id="@+id/EventList"
            android:layout_width="375dp"
            android:layout_height="400dp"
            android:background="@drawable/activity_main_border" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="100dp"
            android:background="@drawable/activity_main_border"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Hold on an Event to Delete"
                android:textAlignment="center"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#192A51"
                android:fontFamily="serif"
                android:onClick="backButtonOnClick"
                android:text="Back" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>