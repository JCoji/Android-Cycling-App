<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#192A51"
    tools:context=".ClubActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#192A51"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="126dp"
            android:background="@drawable/activity_main_border"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:fontFamily="serif"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="WELCOME CLUB USER"
                android:textColor="#192A51"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="454dp"
            android:background="@drawable/activity_main_border"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clubText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acitve Events"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <ListView
                android:id="@+id/CEventsList"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_weight="2.5">

            </ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/make_event_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="newClubEventButtonOnClick"
                    android:text="Make new Event" />

                <Button
                    android:id="@+id/view_requests_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="requestOnClick"
                    android:text="Join Requests" />

                <Button
                    android:id="@+id/view_members_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="membersOnClick"
                    android:text="Current Members" />

            </LinearLayout>

            <Button
                android:id="@+id/Edit_Event_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:onClick="editClubEventButtonOnClick"
                android:text="Edit Events" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>